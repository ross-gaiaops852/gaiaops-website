<script>
  // ROI Calculator Logic
  document.addEventListener('DOMContentLoaded', function() {
    const revenueInput = document.getElementById('annual-revenue');
    const teamSizeInput = document.getElementById('team-size');
    const billableRateInput = document.getElementById('billable-rate');
    const calculateBtn = document.getElementById('calculate-roi-btn');

    const timeSavingsEl = document.getElementById('time-savings');
    const revenueImpactEl = document.getElementById('revenue-impact');
    const netRoiEl = document.getElementById('net-roi');

    // Format number with commas
    function formatNumberWithCommas(num) {
      return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    }

    // Remove commas and get raw number
    function parseFormattedNumber(str) {
      return parseFloat(str.replace(/,/g, '')) || 0;
    }

    // Format annual revenue input with commas
    function formatRevenueInput() {
      if (!revenueInput) return;

      const cursorPosition = revenueInput.selectionStart;
      const oldValue = revenueInput.value;
      const rawValue = parseFormattedNumber(revenueInput.value);

      if (!isNaN(rawValue) && rawValue >= 0) {
        const formatted = formatNumberWithCommas(rawValue);
        revenueInput.value = formatted;
        revenueInput.dataset.rawValue = rawValue.toString();

        // Restore cursor position approximately
        const addedCommas = formatted.length - oldValue.replace(/,/g, '').length;
        const newPosition = Math.min(cursorPosition + addedCommas, formatted.length);
        revenueInput.setSelectionRange(newPosition, newPosition);
      }
    }

    // Handle revenue input formatting
    if (revenueInput) {
      revenueInput.addEventListener('input', function(e) {
        // Allow only numbers and commas
        let value = e.target.value.replace(/[^\d,]/g, '');
        e.target.value = value;
      });

      revenueInput.addEventListener('blur', formatRevenueInput);

      // Format on load
      formatRevenueInput();
    }

    function calculateROI() {
      console.log('Calculate ROI button clicked');

      // Get current values from inputs
      const revenueValue = revenueInput?.value || '0';
      const teamSizeValue = teamSizeInput?.value || 0;
      const billableRateValue = billableRateInput?.value || 0;

      console.log('Input values:', { revenueValue, teamSizeValue, billableRateValue });

      const revenue = parseFormattedNumber(revenueValue);
      const teamSize = parseInt(teamSizeValue);
      const billableRate = parseFloat(billableRateValue);

      console.log('Parsed values:', { revenue, teamSize, billableRate });

      // NEW LOGIC: 65% → 80% utilization improvement
      const avgHoursPerPerson = 2080; // Standard work year
      const currentUtilization = 0.65; // 65% current utilization
      const improvedUtilization = 0.80; // 80% after improvements

      // Current billable hours per person: 65% × 2,080 = 1,352
      const currentBillableHours = avgHoursPerPerson * currentUtilization;

      // Improved billable hours per person: 80% × 2,080 = 1,664
      const improvedBillableHours = avgHoursPerPerson * improvedUtilization;

      // Hours gained per person: 1,664 - 1,352 = 312
      const hoursGainedPerPerson = improvedBillableHours - currentBillableHours;

      // Total time savings across team
      const savedHours = hoursGainedPerPerson * teamSize;

      // Calculate revenue impact
      const revenueImpact = savedHours * billableRate;

      // Calculate net ROI (Systematic Growth plan)
      const monthlyFee = 2997;
      const onboardingFee = 1997;
      const annualInvestment = (monthlyFee * 12) + onboardingFee; // $37,961
      const netRoi = revenueImpact - annualInvestment;

      console.log('Calculated values:', { savedHours, revenueImpact, netRoi });

      // Update UI
      if (timeSavingsEl) {
        const displayValue = `${Math.round(savedHours).toLocaleString()} hours/year`;
        console.log('Updating time savings to:', displayValue);
        timeSavingsEl.textContent = displayValue;
      }
      if (revenueImpactEl) {
        const displayValue = `$${Math.round(revenueImpact).toLocaleString()}`;
        console.log('Updating revenue impact to:', displayValue);
        revenueImpactEl.textContent = displayValue;
      }
      if (netRoiEl) {
        const roiDisplay = netRoi >= 0 ? `$${Math.round(netRoi).toLocaleString()}` : `-$${Math.round(Math.abs(netRoi)).toLocaleString()}`;
        console.log('Updating net ROI to:', roiDisplay);
        netRoiEl.textContent = roiDisplay;
      }

      console.log('ROI calculation complete');
    }

    // Add click event to Calculate button
    if (calculateBtn) {
      console.log('Calculate button found, attaching event listener');
      calculateBtn.addEventListener('click', function(e) {
        e.preventDefault();
        console.log('Button clicked');
        calculateROI();
      });
    } else {
      console.error('Calculate button not found');
    }

    // Optional: Allow Enter key in inputs to trigger calculation
    [revenueInput, teamSizeInput, billableRateInput].forEach(input => {
      input?.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          calculateROI();
        }
      });
    });

    // Initial calculation on page load
    calculateROI();
  });

  // FAQ Accordion Logic
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(item => {
