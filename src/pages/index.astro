  font-weight: bold;
}

/* 5. Framework Section */
.framework-section {
  background: var(--color-white);
  padding: 5rem 0;
}

.framework-section h2 {
  font-family: var(--font-family-primary);
  font-size: 2.5rem;
  color: var(--color-navy-primary);
  text-align: center;
  margin-bottom: 3rem;
}

.framework-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.framework-visual {
  text-align: center;
}

.maturity-pyramid {
  width: 100%;
  height: 400px;
  background: var(--color-off-white);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.1rem;
  color: var(--color-dark-gray);
  border: 2px dashed var(--color-light-gray);
}

.framework-levels {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.level-item {
  background: var(--color-navy-primary);
  color: var(--color-white);
  padding: 1rem 1.5rem;
  border-radius: var(--radius-md);
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.level-item:hover {
  background: var(--color-teal-primary);
  transform: translateX(5px);
}

.level-item .expand {
