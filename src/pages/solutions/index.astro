---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import TrackCard from '../../components/ui/TrackCard.astro';
import { tracks } from '../../utils/trackData.ts';
---

<BaseLayout 
  title="Services - Progressive Excellence Framework | GaiaOps"
  description="Advance through six operational tracks to transform chaos into systematic excellence. Foundation → Advanced → Complete levels for environmental consultancies."
>
  <Header />
  
  <main id="main-content" class="tracks-overview">
    <section class="hero">
      <div class="container">
        <h1>7 Operational Tracks to Transform Your Practice</h1>
        <p class="hero-description">
          Choose the track that addresses your most pressing challenge, then expand systematically as you grow. Each track contains proven methodologies with measurable results.
        </p>
        <div class="cta-buttons">
          <a href="/assessment" class="btn btn-primary">Take Operational Assessment</a>
          <a href="/contact" class="btn btn-secondary">Book Playbook Strategy Call</a>
        </div>
      </div>
    </section>

    <section class="framework-intro">
      <div class="container">
        <h2>Progressive Playbook Delivery System</h2>
        <div class="framework-grid">
          <div class="framework-item">
            <h3>Foundation Playbooks</h3>
            <p>Core operational playbooks using existing tools (6 weeks)</p>
          </div>
          <div class="framework-item">
            <h3>Advanced Playbooks</h3>
            <p>Automation and optimization playbooks (7 weeks)</p>
          </div>
          <div class="framework-item">
            <h3>Complete Playbooks</h3>
            <p>AI-enhanced strategic playbooks (8 weeks)</p>
          </div>
        </div>
      </div>
    </section>

    <section class="tracks-grid">
      <div class="container">
        <h2>7 Operational Tracks - Choose Your Starting Point</h2>
        <div class="tracks">
          {tracks.map(track => (
            <TrackCard
              icon={track.icon}
              title={track.title}
              subtitle={track.subtitle}
              description={track.description}
              foundationLevel={track.foundationLevel}
              advancedLevel={track.advancedLevel}
              completeLevel={track.completeLevel}
              idealState={track.idealState}
              href={track.href}
              color={track.color}
            />
          ))}
        </div>
      </div>
    </section>

    <section class="subscription-model">
      <div class="container">
        <h2>Subscription-Based Unlimited Implementations</h2>
        <div class="subscription-grid">
          <div class="subscription-item">
            <h3>Monthly Subscription</h3>
            <p>$2,500-3,500/month based on company size. Includes unlimited playbook implementations across all operational areas.</p>
          </div>
          <div class="subscription-item">
            <h3>Assessment-Driven Priority</h3>
            <p>Digital Operations Assessment identifies optimal playbook sequence and operational readiness for maximum impact.</p>
          </div>
          <div class="subscription-item">
            <h3>6-8 Week Delivery Cycles</h3>
            <p>Each playbook delivered systematically with proven methodologies and measurable results within 6-8 weeks.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.hero {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  color: white;
  padding: 5rem 0;
  text-align: center;
}

.hero h1 {
  font-size: 3rem;
  font-weight: bold;
  margin-bottom: 1rem;
}

.hero-description {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  opacity: 0.9;
}

.cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.btn {
  padding: 0.75rem 2rem;
  border-radius: 0.5rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.2s;
}

.btn-primary {
  background-color: white;
  color: #059669;
}

.btn-primary:hover {
  background-color: #f9fafb;
}

.btn-secondary {
  background-color: transparent;
  color: white;
  border: 2px solid white;
}

.btn-secondary:hover {
  background-color: white;
  color: #059669;
}

.framework-intro {
  padding: 4rem 0;
  background-color: #f9fafb;
}

.framework-intro h2 {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 2rem;
  color: #1f2937;
}

.framework-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.framework-item {
  text-align: center;
  padding: 2rem;
  background: white;
  border-radius: 1rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.framework-item h3 {
  font-size: 1.5rem;
  color: #059669;
  margin-bottom: 1rem;
}

.tracks-grid {
  padding: 4rem 0;
}

.tracks-grid h2 {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 3rem;
  color: #1f2937;
}

.tracks {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
}

.subscription-model {
  background-color: var(--color-navy-primary);
  color: var(--color-white);
  padding: var(--spacing-8) 0;
}

.subscription-model h2 {
  text-align: center;
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  font-family: var(--font-family-primary);
  margin-bottom: var(--spacing-6);
}

.subscription-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-4);
}

.subscription-item {
  background: rgba(255, 255, 255, 0.1);
  padding: var(--spacing-4);
  border-radius: var(--radius-lg);
  text-align: center;
}

.subscription-item h3 {
  font-size: var(--font-size-h4);
  font-weight: var(--font-weight-semibold);
  font-family: var(--font-family-primary);
  margin-bottom: var(--spacing-2);
  color: var(--color-teal-primary);
}

.subscription-item p {
  color: rgba(255, 255, 255, 0.9);
  line-height: var(--line-height-relaxed);
}
</style>