---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

import { getEnvironmentConfig } from '../config/environment';

const { 
  title, 
  description = "GaiaOps - Progressive Operational Excellence for Environmental Consultancies", 
  image = "/og-image.jpg" 
} = Astro.props;

// Get comprehensive environment configuration
const config = getEnvironmentConfig(new URL(Astro.url));
const { shouldIndex } = config;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/logos/gaiaops-icon.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Protection System - Multi-layer approach -->
    {!shouldIndex ? (
      <>
        <!-- Primary robots directive -->
        <meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex" />
        
        <!-- Search engine specific directives -->
        <meta name="googlebot" content="noindex, nofollow, noarchive, nosnippet" />
        <meta name="bingbot" content="noindex, nofollow, noarchive, nosnippet" />
        <meta name="slurp" content="noindex, nofollow" />
        <meta name="duckduckbot" content="noindex, nofollow" />
        
        <!-- Additional crawler protection -->
        <meta name="AdsBot-Google" content="noindex, nofollow" />
        <meta name="facebookbot" content="noindex, nofollow" />
        <meta name="twitterbot" content="noindex, nofollow" />
        <meta name="linkedinbot" content="noindex, nofollow" />
        
        <!-- AI crawler protection -->
        <meta name="ChatGPT-User" content="noindex, nofollow" />
        <meta name="GPTBot" content="noindex, nofollow" />
        <meta name="Claude-Web" content="noindex, nofollow" />
        
        <!-- Development environment markers -->
        <meta name="environment" content={config.isProduction ? 'production' : 'development'} />
        <meta name="hostname" content={config.hostname} />
        <meta name="seo-protection" content="active" />
        <meta name="production-site" content="https://gaiaops.com" />
        
        <!-- Additional protection -->
        <meta name="revisit-after" content="never" />
        <meta name="rating" content="noindex" />
      </>
    ) : (
      <>
        <!-- Production: Positive SEO signals -->
        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
        <meta name="googlebot" content="index, follow" />
        <meta name="bingbot" content="index, follow" />
        
        <!-- Canonical URL for production -->
        <link rel="canonical" href={`https://gaiaops.com${Astro.url.pathname}`} />
        
        <!-- Production environment marker -->
        <meta name="environment" content="production" />
        <meta name="seo-protection" content="disabled" />
      </>
    )}
    
    <!-- Google Fonts Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Calendly Integration -->
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>

    <title>{title}</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>